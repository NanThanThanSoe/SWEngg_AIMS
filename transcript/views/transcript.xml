<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="kanban_view_transcript" model="ir.ui.view">
            <field name="name">Student Kanban</field>
            <field name="model">transcript</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_res_partner_kanban">
                                <div class="o_kanban_image">
                                    <t t-if="record.image.value">
                                        <img t-att-src="kanban_image('transcript', 'image', record.id.value)" alt="Student"/>
                                    </t>
                                    <t t-if="!record.image.value">
                                        <img t-att-src='_s + "/base/static/img/avatar.png"' alt="Student"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <field name="first_name"/>
                                            <t t-if="record.middle_name.raw_value">
                                                <field name="middle_name"/>
                                            </t>
                                            <t t-if="record.last_name.raw_value">
                                                <field name="last_name"/>
                                            </t>
                                        </a>
                                    </h4>
                                    <ul>

                                        <li t-if="record.mobile.raw_value">
                                            <field name="mobile"/>
                                        </li>
                                        <li t-if="record.email.raw_value">
                                            <a t-attf-href="mailto:#{record.email.value}">
                                                <field name="email"/>
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    <record id="transcript_tree_view" model="ir.ui.view">
        <field name="name">transcript.tree.view</field>
        <field name="model">transcript</field>
        <field name="arch" type="xml">
            <tree string="Student information">
                <field name="first_name"/>
                <field name="middle_name"/>
                <field name="last_name"/>
                <field name="student_ID"/>
                <field name="level"/>
                <field name="program"/>
                <field name="address"/>
                <field name="mobile"/>
                <field name="email"/>
                <field name="semester"/>
            </tree>
        </field>
    </record>

    <record id="transcript_form_view" model="ir.ui.view">
        <field name="name">transcript.form.view</field>
        <field name="model">transcript</field>
        <field name="arch" type="xml">
            <form string="Student information">
<!--              <group>-->
<!--                <field name="first_name" string="First Name" placeholder="First Name" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="last_name" string="Last Name" placeholder="Last Name" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="student_ID" string="Student ID" placeholder="Student ID" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="level" string="Level" placeholder="Select Level" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="program" string="Program" placeholder="Select Program" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="address" string="Home Address" placeholder="Home Address" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="mobile" string="Mobile" placeholder="Mobile" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="email" string="Email" placeholder="Email" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="semester" string="Semester" placeholder="Semester" style="max-width: 1150px; width: 500px"/>-->
<!--                <field name="gpa" string="GPA" placeholder="GPA" style="max-width: 1150px; width: 500px"/>  -->
<!--              </group>-->
                <sheet>
                        <field name="image" widget="image" class="oe_left oe_avatar"/>
                        <div class="oe_title">
                            <h3>
                                <field name="title" placeholder="Title"/>
                            </h3>
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;">
                                            <field name="first_name" required="1" placeholder="First Name"/>
                                        </td>
                                        <td style="padding-right:10px;">
                                            <field name="middle_name" placeholder="Middle Name"/>
                                        </td>
                                        <td style="padding-right:10px;">
                                            <field name="last_name" placeholder="Last Name" required="1"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="personal_information"
                                  string="Personal Information">
                                <group col="4" colspan="4" name="personal_detail">
                                    <field name="student_ID" string="Student ID" placeholder="Student ID" required="1"/>
                                    <field name="level" string="Level" placeholder="Select Level"/>
                                    <field name="program" string="Program" placeholder="Select Program"/>
                                    <field name="semester" string="Semester" placeholder="Semester"/>
                                    <field name="gpa" string="GPA"/>
                                    <field name="address" string="Home Address" placeholder="Home Address"/>
<!--                                    <field name="mobile" string="Mobile" placeholder="Mobile"/>-->
                                    <field name="mobile" required="1"/>
                                    <field name="email" required="1"/>
                                </group>
                      </page>
                            <page name="educational" string="Educational">
                                <group>
                                    <group colspan="3">
<!--                                        <field name="gr_no"/>-->
                                    </group>
                                </group>
                                <group>
                                    <separator string="Transcript"
                                               colspan="4"/>

                                </group>
                            </page>
                        </notebook>
                    </sheet>
            </form>
        </field>
    </record>
     <record id="student_search_view" model="ir.ui.view">
            <field name="name">Student Search View</field>
            <field name="model">transcript</field>
            <field name="arch" type="xml">
                <search string="Search Student">
                    <field name="last_name"/>
                    <field name="student_ID"/>
                    <filter string="Software System Engineering" name="SSE" help="Students of Software System Engineering Faculty"/>
                </search>
            </field>
        </record>

