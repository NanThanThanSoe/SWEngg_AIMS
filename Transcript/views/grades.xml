<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="grades_tree_view" model="ir.ui.view">
        <field name="name">grades.tree.view</field>
        <field name="model">grades</field>
        <field name="arch" type="xml">
            <tree string="Student information">
                <field name="student_name"/>
                <field name="student_ID"/>
                <field name="level"/>
                <field name="program"/>
                <field name="semester"/>
                <field name="subject"/>
                <field name="grade"/>
            </tree>
        </field>
    </record>

    <record id="grades_form_view" model="ir.ui.view">
        <field name="name">grades.form.view</field>
        <field name="model">grades</field>
        <field name="arch" type="xml">
            <form string="Student's Grades">
                <header>
                    <button name="btn_submit" string="Submit" class="oe_highlight" type="object" states="draft"/>
                    <button name="btn_confirm" string="Confirm" class="oe_highlight" type="object" states="submit"/>
                    <button name="btn_refuse" string="Refuse" type="object" states="submit"/>
                    <field name="state" widget="statusbar" statusbar_visible="submit,confirm,refuse"/>
                </header>
                <sheet>
<!--                        <field name="image" widget="image" class="oe_left oe_avatar"/>-->
                        <div class="oe_title">
<!--                            <h3>-->
<!--                                <field name="title" placeholder="Title"/>-->
<!--                            </h3>-->
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;">
                                            <field name="student_name" required="1" placeholder="Student Name"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="personal_information"
                                  string="Personal Information">
                                <group col="4" colspan="4" name="personal_detail">
                                    <field name="student_ID" string="Student ID" placeholder="Student ID" required="1"/>
                                    <field name="level" string="Level" placeholder="Select Level"/>
                                    <field name="program" string="Program" placeholder="Select Program"/>
                                    <field name="semester" string="Semester" placeholder="Semester"/>
                                    <field name="subject" string="Subject"/>
                                    <field name="grade" string="Grade" placeholder="0"/>
<!--                                    <field name="mobile" string="Mobile" placeholder="Mobile"/>-->
<!--                                    <field name="mobile" required="1"/>-->
<!--                                    <field name="email" required="1"/>-->
                                </group>
                      </page>

                        </notebook>
                    </sheet>
            </form>
        </field>
    </record>
     <record id="grades_search_view" model="ir.ui.view">
            <field name="name">Grade Search View</field>
            <field name="model">grades</field>
            <field name="arch" type="xml">
                <search string="Search Student">
                    <field name="student_name"/>
                    <field name="student_ID"/>
                    <filter string="Software System Engineering" name="SSE" help="Students of Software System Engineering Faculty"/>
                </search>
            </field>
        </record>

